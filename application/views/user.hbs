<body>
  <nav>
    <div class="logo">MedRec</div>
    <div class="loginSignup">
      <span>Hello, {{userDetail.name}}</span>
      <button class="logoutButton" onclick="location.href='/index'">Logout</button>
    </div>
  </nav>
  <div class="container">
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Navbar</a>
      <!-- <span class="navbar-text">Hello, {{userDetail.name}}</span> -->
      <!-- <button class="logoutButton" onclick="location.href='/index'">Logout</button> -->
      <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
